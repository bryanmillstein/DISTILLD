<section class="post-description group">
  <img class="thumb-picture" src="<%= post.escape('user_picture_url') %>"/>
  <ul class="post-items">
    <li class="post-user"><a href="#/users/<%= post.escape('user_id') %>"><%= post.escape('user_name') %></a></li>
    <li>is drinking</li>
    <li><a href="#"><%= post.escape('drink') %> </a></li>
  </ul>
    <p class="post-body"><%= post.escape('body') %></p>
    <% if (options) { %>
      <button class="post-options">Options</button>
    <% } else { %>
      <button class="post-options" id="comment-form">Comment</button>
    <% } %>
    <button class="toast-button"></button>
    <form class="comment-form" action="index.html" method="post"></form>
    <ul class="comments"></ul>

    <button class="delete-btn"></button>
    <form class="edit-form"></form>
</section>
